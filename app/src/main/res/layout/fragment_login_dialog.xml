<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="earthist.rock.lauren.LoginDialogActivity"
    android:background="@color/colorLayoutBg">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_header_background">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INVEST"
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:typeface="sans"
            android:textStyle="bold"
            android:textSize="@dimen/_25sdp"
            android:textColor="@color/colorWhite"
            android:layout_margin="@dimen/_20sdp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You&apos;ve chosen to invest in Name(star, support, cause)"
            android:id="@+id/txt_invest_starname"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_margin="@dimen/_3sdp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Here is where your money will be going"
            android:id="@+id/textView3"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_3sdp" />
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="star name"
                android:id="@+id/txt_invest_star_target"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:layout_margin="@dimen/_3sdp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="78~90%"
                android:id="@+id/textView5"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:layout_margin="@dimen/_3sdp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Earthist Inc:"
                android:id="@+id/textView6"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:layout_margin="@dimen/_3sdp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10~20%"
                android:id="@+id/textView7"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:layout_margin="@dimen/_3sdp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cause Name"
                android:id="@+id/txt_invest_cause_name"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:layout_margin="@dimen/_3sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30% of Earthist take"
                android:id="@+id/textView9"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:layout_margin="@dimen/_3sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You get:"
                android:id="@+id/textView10"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:layout_margin="@dimen/_3sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nothing but feel goods"
                android:id="@+id/textView11"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:layout_margin="@dimen/_3sdp" />
        </GridLayout>
    </LinearLayout>
    <com.facebook.login.widget.LoginButton
        android:id="@+id/button_facebook_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="40dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_margin="@dimen/_3sdp">
            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="#d5d2d2"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR"
                android:id="@+id/textView4"
                android:layout_gravity="center" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="#d5d2d2"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp" />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_user_name"
            android:layout_gravity="center_horizontal"
            android:hint="User Email"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txt_user_password"
            android:layout_gravity="center_horizontal"
            android:hint="Password"
            android:layout_margin="@dimen/_8sdp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:text="login "
            android:id="@+id/button_login"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/invest_gradient_button"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="register"
                android:id="@+id/button_register"
                android:background="@android:color/transparent"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1" />
            <View
                android:layout_width="2dp"
                android:layout_height="@dimen/_20sdp"
                android:background="#d5d2d2"

                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_gravity="center_vertical" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="forgot password?"
                android:id="@+id/button_forgot_password"
                android:background="@android:color/transparent"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>