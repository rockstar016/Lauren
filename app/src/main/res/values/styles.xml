<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="customdialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DefaultButton">
        <item name="android:layout_height">@dimen/round_button_height</item>
        <item name="android:background">@drawable/round_accent_button_selector</item>
        <item name="android:textSize">@dimen/default_button_textsize</item>
    </style>
    <style name="DefaultStarDetailButton">
        <item name="android:background">@drawable/cause_bio_select_button</item>
        <item name="android:textSize">@dimen/default_button_textsize</item>
        <item name="android:textColor">@color/colorDetailedButtonText1</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_2sdp</item>
        <item name="android:layout_marginBottom">@dimen/_2sdp</item>
    </style>


    <style name="DefaultDetailedButton">
        <item name="android:layout_height">@dimen/round_button_height</item>
        <item name="android:background">@drawable/wanderingypc_select_button</item>
        <item name="android:textSize">@dimen/default_button_textsize</item>
        <item name="android:textColor">@color/color_wander_gypc_theme_color</item>
    </style>

</resources>
